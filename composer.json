{
	"name":"bit3/contao-compat",
	"description":"Compat layer to work around differences in the Contao 2 and Contao 3 API.",
	"keywords":["contao", "compat"],
	"type":"contao-module",
	"homepage":"http://bit3.de",
	"license":"LGPL-3.0+",
	"authors":[
		{
			"name":"Tristan Lins",
			"email":"tristan.lins@bit3.de",
			"homepage":"http://bit3.de",
			"role":"Developer"
		}
	],
	"support":{
		"email":"info@bit3.de",
		"issues":"https://github.com/bit3/contao-compat/issues",
		"wiki":"https://github.com/bit3/contao-compat/wiki",
		"irc":"irc://irc.freenode.org/contao.dev",
		"source":"https://github.com/bit3/contao-compat"
	},
	"require":{
		"php":">=5.3",
		"contao/core":">=2.11,<4"
	},
	"require-dev":{
		"squizlabs/php_codesniffer":"1.*",
		"bit3/php-coding-standard":"@dev"
	},
	"autoload":{
		"classmap": ["src/"]
	},
	"extra":{
		"contao": {
			"symlinks":{
				"contao":"system/modules/compat"
			}
		}
	}
}
